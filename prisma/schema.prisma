generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model servers {
  id       String @id @unique
  settings Json   @default("{\"cooldown\": {\"time\": 5, \"commands\": [\"audio_play\", \"audio_leave\"]}}")
}

model user {
  id                  Int        @id @unique
  newgroundsUserId    Int
  newgroundsSupporter Boolean
  newgrounds          newgrounds @relation(fields: [newgroundsUserId, newgroundsSupporter], references: [id, supporter])

  @@unique([newgroundsUserId, newgroundsSupporter])
}

model newgrounds {
  id        Int     @unique
  username  String  @unique
  supporter Boolean
  user      user?

  @@id([id, supporter])
}
